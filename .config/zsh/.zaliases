#!/usr/env zsh

# settings for common commands
alias ls="eza --icons --group-directories-first"
alias ll="eza --icons --group-directories-first -al"
alias cat="bat --style=plain --paging=never"
alias tree="eza --icons --tree --git-ignore --all"
alias wget="wget --hsts-file=$XDG_DATA_HOME/wget-hsts"
alias top="btop"

# application aliases
alias se="EDITOR=$EDITOR sudoedit"
alias vs="EDITOR=$EDITOR visudo"
alias ytd="yt-dlp --no-mtime"
alias hx=$EDITOR
alias mc=macchina
alias code=codium
alias live=live-server
alias trp="trash-put"
alias trr="trash-restore"
alias zn="zellij -l welcome"

# git aliases
alias gst="git status"
alias gc="git commit"
alias ga="git add"
alias gpl="git pull"
alias gpom="git pull origin main"
alias gpu="git push"
alias gpuom="git push origin main"
alias gd="git diff"
alias gch="git checkout"
alias gnb="git checkout -b"
alias gac="git add . && git commit"
alias grs="git restore --staged ."
alias gre="git restore"
alias gr="git remote"
alias gcl="git clone"
alias glg="git log --decorate=full --graph --abbrev-commit"
alias gt="git ls-tree -r main --name-only"
alias grm="git remote"
alias gb="git branch"
alias gf="git fetch"
